.top_banner{
  width: 100%;
}
.top_banner image{
  width: 100%;
}
.container{
  padding: 0 32rpx 20rpx 32rpx;
}
.tap .van-tabs__scroll {
  background-color: transparent;
}
.tap .van-tabs__line{
  width: 134rpx!important;
  height: 8rpx;
  font-size: 34rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
  line-height: 46rpx;
  color: #38C670;
  opacity: 0.9;
  background: linear-gradient(180deg, #6FF1A2 0%, #0AC956 100%);
  border-radius: 30rpx;
}
.one-top {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}
.one-top-con-title {
  font-size: 17px;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  line-height: 23px;
  color: #000000;
  opacity: 0.9;
  margin-bottom: 40rpx;
}
.one-top-con-sub {
  display: flex;
  justify-content: space-around;
}
.one-top-con-sub-left image {
  width: 93px;
  height: 93px;
  border-radius: 50%;
}
.text {
  text-align: center;
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 1;
}
.one-top-con-sub-right {
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 0.7;
  margin-left: 40rpx;
}
.two-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.two-title image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.two-title text {
  font-size: 15px;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  line-height: 21px;
  color: #0ac956;
  opacity: 0.9;
}
.two-con text {
  display: block;
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 0.9;
  margin-bottom: 20rpx;
}
.three-con {
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 0.9;
}
.four {
  margin-bottom: 40rpx;
}
button{
  margin-top: 20rpx;
}