<!-- pages/active/active.wxml -->
<view class="container">
  <view class="top">
    <view class="dateList">
      <view class="day" wx:for="{{dateList}}" wx:for-item="item" wx:key="*this">
        <text class="week {{index==5||index==6?'weekend':''}}">{{weekList[index]}}</text>
        <text data-date='{{item}}' class="date {{item==today && !chooseDate?'today':''}} {{item == chooseDate ?'today':''}}" bind:tap="choose">
          <text>{{item==today?'今':item}}</text>
        </text>
      </view>
    </view>
    <view class="line1"></view>
    <view class="typeList">
      <view wx:for="{{typeList}}" wx:key="*this" class="scroll-view-item_H {{index==active?'active':''}}" data-id='{{index}}' bindtap="changeType">
        <text class="text">{{item}}</text>
      </view>
    </view>
  </view>
  <view class="title">
    <text class="line"></text>
    <text class="con">热门活动</text>
    <text class="right"></text>
  </view>
  <view class="bottom">
    <view class="bottom-item" wx:for="{{10}}" wx:key="*this" bind:tap="goto">
      <view class="img">
        <image src="../../images/bg.png" />
      </view>
      <view class="te">
        <view class="te_title">2021新春民族音乐会</view>
        <view class="te_con">活动介绍活动介绍活动介活动绍活动介绍</view>
      </view>
    </view>
  </view>
</view>