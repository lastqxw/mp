/* pages/volunteersignup/volunteersignup.wxss */
.top{
  position: relative;
  z-index: 99;
  margin-top: 160rpx;
}
.top_image{
  width: 100%;
}
.main{
  padding:20rpx 32rpx 0 32rpx; 
  background: #F6F7F9;
}
.card {
  z-index: 9999;
}
.card-body {
  padding:40rpx;
  background: #FFFFFF;
  box-shadow: 0px 2rpx 12rpx rgba(0, 0, 0, 0.1);
  opacity: 1;
  border-radius: 40rpx;
}
.card-body-title {
  padding-bottom: 6rpx;
  font-size: 34rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
  line-height: 46rpx;
  color: #000000;
  opacity: 0.9;
}
.van-cell {
  background: rgba(0, 0, 0, 0.02);
  border: 1px solid #eaeaef;
  opacity: 1;
  border-radius: 6px;
  margin-top: 20rpx;
  font-size:30rpx!important;
  color: #000000;
  opacity: 0.5;
  padding:10rpx!important;
  text-indent: 10rpx;
  align-items: center;
}

.card-body-form-title{
  padding-top: 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #000000;
  opacity: 0.5;
  text-align:center;
}
button{
  margin-top: 130rpx;
  background-color: #FF8104!important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
}
.ischeck{
  width: 100%;
  padding-top: 40rpx;
}
.van-checkbox{
  justify-content: center;
  font-size: 28rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 40rpx;
  color: #0AC956;
  opacity: 1;
}
van-icon{
  font-size:32rpx!important;
}
.statement{
  display: inline-block;
  color:#0AC956;
}
.title{
  font-size: 14px;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  color: #000000;
}
.sub{
  font-size: 12px;
  margin-bottom: 20rpx;
  color: #000000;
  opacity: 0.9;
  padding:0px 32rpx
}
.con{
  font-size: 12px;
  margin-bottom: 20rpx;
  color: #000000;
  opacity: 0.9;
  padding:0px 32rpx
}

.manage-top{
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.manage-top-img{
  width: 100%;
  height: auto;
}
.manage-center{
  position: absolute;
  top: 160rpx;
  left: 0;
  width: 100%;
  padding-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
}