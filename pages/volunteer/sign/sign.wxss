/* pages/volunteer/sign/sign.wxss */
.contailer{
  position: relative;
  z-index: 99;
  margin-top: 160rpx;
}
.body{
  margin:32rpx;
  margin-top: 140rpx;
background: #FFFFFF;
box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.1);
opacity: 1;
border-radius: 20px;
text-align: center;
}
.body image{
  width: 540rpx;
  height: 540rpx;
  background: rgba(0, 0, 0, 0);
  opacity: 1;
  margin-top: 92rpx;
}
.text{
font-size: 16px;
font-family: Alibaba PuHuiTi;
font-weight: 400;
color: #000000;
opacity: 1;
margin-top:40rpx;
padding-bottom:40rpx;
}

.manage-top{
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.manage-top-img{
  width: 100%;
  height: auto;
}
.manage-center{
  position: absolute;
  top: 160rpx;
  left: 0;
  width: 100%;
  padding-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
}