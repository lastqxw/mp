/* pages/volunteer/volunteer.wxss */
.bodystyle{
  padding:0 32rpx 124rpx 32rpx;
  background: #F6F7F9;
}
.main{
  margin-top:20rpx; 
  background: #FFFFFF;
  border: 2rpx solid #EAEAEF;
  opacity: 1;
  border-radius: 8rpx;
}
.main .imgstyle{
  width:100%;
  border-radius: 8rpx 8rpx 0 0;
}
.main .linestyle{
  padding:32rpx 20rpx 28rpx 20rpx;
}
.main .linestyle .workname{  
  font-size: 30rpx;
  font-weight: 500;
  line-height: 42rpx;
  color: #000000;
  opacity: 0.9;
}
.main .linestyle .integral{   
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #000000;
  opacity: 0.5;
  padding-top: 8rpx;
}
 .bottomstyle{
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
  height: 124rpx;
  background: #F6F7F9;
  padding:30rpx 32rpx 0 32rpx;
  box-sizing: border-box;
}
.bottomstyle view {
  width: 46%!important;
  float: left;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 46rpx;
  color: #000000; 
  background: #FFFFFF;
  border: 2rpx solid rgba(0, 0, 0, 0.10196078431372549);
  opacity: 1;
  border-radius: 8rpx;
  text-align:center;
  height: 80rpx;
  line-height: 80rpx;
}
.bottomstyle view:nth-of-type(1){
  margin-right: 6%;
}
.bottomstyle .active{
  color:#ffffff;
  background: #FF8104;
}