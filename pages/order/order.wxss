page{
  background: #F6F7F9;
}
.top_banner{
  width: 100%;
}
.top_banner image{
  width: 100%;
}
.order_con{
  padding: 20rpx 32rpx;
}
.one-top {
  padding: 30rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
}
.two-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.two-title image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.two-title text {
  font-size: 15px;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  line-height: 21px;
