  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.about_info{
  margin-top: 10rpx;
  padding: 20rpx 32rpx;
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
