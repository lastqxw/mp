/* pages/personal/personal.wxss */
page{
  background: #38C670;
}
.psl_top{
  padding: 46rpx 32rpx 36rpx 32rpx;
  display: flex;
  color: #ffffff;
  background: #38C670;
  position: relative;
  z-index: 99;
  margin-top: 150rpx;
}
.psl_top image{
  margin-top: 7rpx;
  margin-right: 8rpx;
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
}
.psl_con{
  position: relative;
  flex: 1;
  font-size: 44rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 60rpx;
  color: #FFFFFF;
}
.psl_con .post{
  margin-top: 10rpx;
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 42rpx;
  color: #FFFFFF;
  opacity: 0.7;
}
.psl_bot{
  width: 100%;
  min-height: calc(100vh - 192rpx);
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
}
.psl_bot_title{
  position: relative;
  padding: 30rpx 32rpx;
  font-size: 34rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
  line-height: 46rpx;
  color: #000000;
}
.psl_more{
  float: right;
  font-size: 26rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 36rpx;
  color: #000000;
  opacity: 0.5;
}
.partList{
  padding: 0 32rpx;
}
.partItem{
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  padding: 30rpx 0;
  align-items: center;
  background: rgba(0,0,0,0.03);
  border-radius: 12rpx;
}
.partLeft{
  width: 180rpx;
  text-align: center;
}
.partMid{
  width: 2rpx;
  height: 98rpx;
  background: rgba(0,0,0,0.2);
}
.partRight{
  padding: 0 20rpx;
}
.partState,.partDate{
  font-size: 26rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(0,0,0,0.6);
}
.partTime{
  font-size: 34rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 46rpx;
  color: rgba(0,0,0,0.6);
}
.partDate,.partTime{
  margin-top: 4rpx;
}
.partTitle{
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 42rpx;
  color: #000000;
}
.loc,.des{
  margin-top: 10rpx;
  font-size: 26rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 36rpx;
  color: #000000;
}
.loc [is="miniprogram_npm/@vant/weapp/icon/index"],
.des [is="miniprogram_npm/@vant/weapp/icon/index"]{
  font-size: 30rpx;
  vertical-align: bottom;
}
.greenItem{
  color: #fff;
  background: #38C670;
}
.greenItem .partMid{
  background: rgba(255,255,255,0.3);
}
.greenItem .partState,.greenItem .partDate{
  color: #fff;
}
.greenItem .partTime{
  color: #FFFFFF;
}
.greenItem .partTitle,.greenItem .loc,.greenItem .des{
  color: #fff;
}
.inActive .van-button--primary{
  margin-top: 10rpx;
  font-size: 34rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
  line-height: 46rpx;
  color: #38C670;
  background: transparent;
  border-style: dashed;
}

.manage-top{
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.manage-top-img{
  width: 100%;
  height: auto;
}
.manage-center{
  position: absolute;
  top: 160rpx;
  left: 0;
  width: 100%;
  padding-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
}