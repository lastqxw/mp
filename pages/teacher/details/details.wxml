<view class="container">
  <view class="top">
    <image src="{{item.picture}}"></image>
    <view class="top_con"> 
      <view class="teacher_name">{{item.name}}</view>
      <view class="teacher_tag">
        <text>{{item.expertise}}</text>
      </view>
    </view>
  </view>
  <view class="one">
