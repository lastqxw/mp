      <view class="two-con">
        <text>擅长领域：{{item.expertise}}</text>
        <text>讲师格言：{{item.motto}}</text>
        <text>活动类型：{{item.activityList[0].lecturerExpertise}}</text>
        <view class="two-con-des">
          {{item.activityList[0].content}}
        </view>
      </view>
    </view>
