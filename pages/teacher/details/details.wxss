/* pages/teacher/details/details.wxss */
.top {
  width: 100%;
  height: 400rpx;
  position: relative;
  z-index: 99;
  margin-top: 160rpx;
}
.top image {
  width: 100%;
  height: 400rpx;
}
.top_con {
  position: absolute;
  bottom: 20rpx;
  left: 32rpx;
}
.teacher_name {
  font-size: 17px;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  line-height: 23px;
  color: #ffffff;
  opacity: 1;
  margin-bottom: 20rpx;
}
.teacher_tag text {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  padding: 6rpx 36rpx;
  font-size: 12px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: #ffffff;
  margin-right: 20rpx;
  max-width: 200rpx;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden;
  text-overflow: ellipsis;
}
.taps {
  font-size: 17px;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
  line-height: 23px;
  color: #38c670;
  opacity: 0.9;
}
.tap .van-tabs__scroll {
  background-color: transparent;
}
.tap .van-tabs__line {
  width: 134rpx !important;
  height: 4px;
  background: linear-gradient(180deg, #6ff1a2 0%, #0ac956 100%);
  opacity: 1;
  border-radius: 15px;
}
.one {
  padding: 32rpx;
}
.one-top {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.one-top-con-title {
  font-size: 17px;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  line-height: 23px;
  color: #000000;
  opacity: 0.9;
  margin-bottom: 40rpx;
}
.one-top-con-sub {
  display: flex;
  justify-content: space-around;
}
.one-top-con-sub-left image {
  width: 93px;
  height: 93px;
  border-radius: 50%;
}
.text {
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 1;
}
.one-top-con-sub-right {
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 0.7;
  margin-left: 40rpx;
}
.two-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.two-title image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.two-title text {
  font-size: 15px;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  line-height: 21px;
  color: #0ac956;
  opacity: 0.9;
}
.two-con text {
  display: block;
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 0.9;
  margin-bottom: 20rpx;
}
.two-con image {
  width: 100%;
  height: 160px;
  background: rgba(0, 0, 0, 0);
  opacity: 1;
  border-radius: 4px 4px 0px 0px;
}
.two-con-sub {
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 0.9;
  margin-top: 20rpx;
}
.two-con-des {
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 0.7;
  text-indent: 56rpx;
}
.three-con {
  font-size: 14px;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #000000;
  opacity: 0.9;
}
.four {
  margin-bottom: 40rpx;
}

.manage-top{
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.manage-top-img{
  width: 100%;
  height: auto;
}
.manage-center{
  position: absolute;
  top: 160rpx;
  left: 0;
  width: 100%;
  padding-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
}
