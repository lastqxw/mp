/**index.wxss**/
.page-body {
  width: 100vw;
  margin-top: 130rpx;
}
/* .banner-botto {
} */
.swiper-item {
  padding: 0 30rpx;
  /* background-color: #fff; */
}
.swiper-item-img {
  width: 100%;
  height: 360rpx;
  margin: 20rpx auto;
  border-radius: 6px;
}
.banner-bottom{
}
.first {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}
.first-item{
  width: 48%;
  height: 136rpx;
  margin-bottom: 20rpx;
  border-radius: 4px;
  display: flex;
  justify-items: flex-start;
  align-items: center;
  background: #f4f4f4;
}
.first-item image {
  width: 100%;
  height: 100%;
}
.first-item text {
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 34rpx;
  color: #000000;
  display: block;
  margin-top: 8rpx;
  font-weight: 600;
}
.title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  box-sizing: border-box;
}
.line {
  display: inline-block;
  width: 4px;
  height: 14px;
  background: #ff8104;
  opacity: 1;
  border-radius: 2px;
}
.con {
  margin-left: 8rpx;
  font-size: 15px;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  line-height: 21px;
  color: #ff8104;
  opacity: 1;
}
.right {
  float: right;
  border: solid #000;
  border-width: 0 1px 1px 0;
  padding: 3px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  margin-top: 40rpx;
}
.active {
  box-sizing: border-box;
  padding: 14rpx 32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.active-item {
  width: 100%;
  background: #ffffff;
  opacity: 1;
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 20rpx;
  position: relative;
  line-height: 0;
}
.active-item-center{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  line-height: 0;
}
.item-center-top{
  font-size: 28rpx;
  color: #fff;
  border-radius: 60rpx;
  padding: 18rpx 22rpx;
  line-height: 1;
  background: #ff8104;
  display: inline-block;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.item-center-bottom{
  position: absolute;
  padding: 0 20rpx;
  height: auto;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 100%;
}
.center-bottom-left{
  width: calc(100vw - 300rpx);
}
.active-item:nth-child(odd) {
  margin-right: 20rpx;
}
.active-item image {
  width: 100%;
}
.active-title {
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 600;
  line-height: 21px;
  color: #fff;
  margin-bottom: 14rpx;
  display: inline-block;
}
.active-des {
  font-size: 28rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 20px;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.middle{
  display: flex;
  justify-items: center;
  align-content: center;
}

.wx-swiper-dots{
  position:relative;
  bottom: 40rpx !important;
  left: 50%;
  transform: translateX(-50%);
}
.wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: -5rpx;
}

.manage-top{
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.manage-top-img{
  width: 100%;
  height: auto;
}
.manage-center{
  position: absolute;
  top: 160rpx;
  left: 0;
  width: 100%;
  padding-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
}